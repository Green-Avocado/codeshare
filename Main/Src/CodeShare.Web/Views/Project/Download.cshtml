@model CodeShare.Web.Models.DownloadInfo

@{
    ViewBag.Title = "Download";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-1"><img height="80" width="80" style="padding-top:5px" src="@Model.LogoUrl" /></div>
    <div class="col-md-11">
        <h2>@Model.Name</h2>
        <h5>@Model.QuickDescription</h5>
    </div>
</div>

<br>
<p>
    @Html.ActionLink("Home", "Home", "Project", new { id = @Model.Id }, null) |
    @Html.ActionLink("Source Code", "SourceCode", "Project", new { id = @Model.Id }, null) |
    @Html.ActionLink("Downloads", "Download", "Project", new { id = @Model.Id }, null) |
    @Html.ActionLink("Team", "Team", "Project", new { id = @Model.Id }, null) |
    @Html.ActionLink("Issue Tracker", "IssueTracker", "Project", new { id = @Model.Id }, null)
</p>
<div>
    <hr />
    @if (@Model.CurrentRelease != null)
    {
    <h4>@Model.CurrentRelease.Name</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CurrentRelease.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentRelease.CreationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CurrentRelease.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentRelease.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CurrentRelease.DownloadCount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CurrentRelease.DownloadCount)
        </dd>

    </dl>
    }
    else
    {
        <div>
            <h4>Downloads</h4>
            <br>
            <p>Work in progress!</p>
        </div>
    }
</div>

<a href="~/Wireframes/downloads.png" target="_blank">Wireframe of this page</a>

